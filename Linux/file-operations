touch file.txt OR echo "Create a file" > file.txt
echo "Add a text line to the file" >> file.txt

cat file.txt OR less file.txt

cp file.txt file2.txt 
mv file.txt file2.txt

rm -rf file.txt

sudo apt install pakiet
sudo apt purge pakiet

ln -s file symlink

echo "zmienna: $zmienna" -> zmienna: wartość
echo "zmienna: $zmienna' -> zmienna: $zmienna

echo $

test EXPRESSION
	STRING
		STRING1 = STRING2
		STRING1 != STRING2
	INTEGER
		-eq & -ne	equal & not equal
		-ge & -le	greater or equal & less or equal
		-gt & -lt 	greater & less

For:	for (( i=1; $i <= 10; i++)); do echo $i; done
While:	x=5; while [ $x -le 10 ]; do echo $x; x=$(($x+1)); done
Until:	x=5; until [ $x -ge 10 ]; do echo $x; x=$(($x+1)); done
If:	x=5; y=10
	if [ $x -gt 10 ]
	then echo "Liczba $x jest większa od 10"
	elif [ $y -eq 10 ]
	then echo "Liczba $y jest równa 10"
	else echo "Else się wykonał"
	fi

read -p "Enter number: " number
echo $number

cat file.txt | 	tr 'a' '*'	- zamiana a na *
		tr -d 'abcd'	- usuwa znaki abcd
wc file.txt	-l: line -w: słowa -c: bytes
nl file.txt			- numerowanie linii
cat file.txt | wc -l
cat file.txt | sort -n -r
cat file.txt | sort -t',' -k4	- sortuje po 4-tej kolumnie, separator ','
cat file.txt | tr '[:upper:]' '[:lower:]' | egrep -o '\w+' | sort | uniq -c | sort -n | head -20	- 20 najczęstszych słów w pliku

cat file.csv | cut -d',' -f2,4	- wycinanie kolumn 2 i 4 z pliku
cat file.txt | head -20		- pierwszych 20 linii z pliku
cat file.txt | tail -20		- ostatnie 20 linii z pliku

sed:	cat file.txt | 	sed -e 's/Adam/XXX/g' 	- zamiana wszystkich (g) wyrażeń Adam na XXX
			sed -e 's/Adam/&&/g'  	- powielenie dwa razy Adam
			sed '/^$/d'		- usunięcie pustych linii
			sed -n "10,20"p		- wyfiltrowanie zakresu linii od 10 do 20

df -hk | sort -nr | head	- 10 największych katalogów na dysku

diff file1 file2		- porównanie dwóch plików tekstowych
md5sum file			- hash md5 (suma kontrolna) pliku 
sha512sum file			- hash sha512 pliku

Czytanie linii:		while read line
			do
				echo $line
			done
			
Archiwizowanie plików:	tar -cvf archiwum.tar file	- stworzenie archiwum
			gzip archiwum.tar		- spakowanie archiwum
			gunzip archiwum.tar.gz		- rozpakowanie archiwum
			tar -xvf archiwum.tar		- rozpakowanie archiwum
