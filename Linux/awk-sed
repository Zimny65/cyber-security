awk:
awk '{print}' file			- like cat file
awk '{print $0}' file			- whole line
awk '{print $1, $3}' file		- pierwsza kolumna i trzecia kolumna - znak podziału default space
awk /regex/ '{print}' file		- with regular expression
awk -F: /regex/ '{print $1}' file	- option -F "dwukropek" is field separator

sed:
sed -n '1,5p' file			- print first five lines of file
sed 's/old_word/new_word/' file		- zamiana pierwszego wystąpienia w linii old_word na new_word
sed 's/old_word/new_word/g' file	- zamiana wszystkich old_word na new_word
sed 's/^.*at/REPLACED/g' file		- znalezienie ciągu od początku linii do wystąpienia at i zastąpienie przez REPLACED

sort:
sort file				- sortowanie znakowe od a do z
sort -r					- sortowanie znakowe od z do a
sort -n					- sortowanie numeryczne
sort -k2				- sortowanie po drugiej kolumnie
sort -u					- sortowanie z usunięciem duplikatów
sort -u file1 file2			- sort, merge and remove duplicates

wc:
wc -lwc file				- liczba w pliku: (l)linii, (w)słów, (c)znaków
wc -L					- liczba znaków w najdłuższej linii

uniq:
sort -nk2 | uniq -c			- sortowanie numeryczne po k2 plus zliczenie duplikatów

cut:
cut -b -3 file				- ucina od 4-go znaku w każdej linii
cut -b 1-3, 5-7 file
cut -d " " -f 1,2 file			- wycięcie 1 i 2-giej kolumny z pliku (spacja jako znak)
cat /etc/passwd | cut -d ":" -f 1	- użytkownicy linux

tr:
cat file | tr "[a-z]" "[A-Z]"		- lower case to upper case
cat file | tr "[:lower:]" "[:upper:]"

diff:
diff file1 file2			- różnice pomiędzy plikami
